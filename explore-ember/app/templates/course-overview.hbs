  <div class="flex items-start flex-col lg:flex-row">
    <div class="flex-grow">
      {{#if @model.isBeta}}
        <div
          class="flex p-3 border rounded shadow-sm bg-green-100 border-green-300 mb-4"
          data-test-course-beta-notice=""
        >

          <div class="flex">
            <div class="mr-3 mt-0.5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                class="w-6 fill-current text-green-400"
              ><path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                  clip-rule="evenodd"
                ></path></svg>
            </div>
            <div
              class="prose prose-compact leading-6 text-sm max-w-none prose-green"
            >

              This challenge is free to try when it's in beta. We keep
              challenges in beta for a few weeks to gather feedback.

            </div>
          </div>

        </div>
      {{else if @model.isFree}}
        <div
          class="flex p-3 border rounded shadow-sm bg-green-100 border-green-300 mb-4"
          data-test-course-free-notice=""
        >
          <div class="flex">
            <div class="mr-3 mt-0.5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                class="w-6 fill-current text-green-400"
              ><path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                  clip-rule="evenodd"
                ></path></svg>
            </div>
            <div
              class="prose prose-compact leading-6 text-sm max-w-none prose-green"
            >

              This challenge is free until 1 September 2024!

            </div>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
